{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs\\log.log" }
      }
    ]
  },
  "Service": {
    "Imports": [
      "Imports\\SampleAdapter.dll",
      "Imports\\Mtconnect.TcpAdapter.dll"
    ],
    "Adapters": [
      {
        "Adapter": "Mtconnect.TcpAdapter",
        "Sources": [ "SampleAdapter.PCStatusMonitor" ],
        "Options": {
          "heartbeat": 10000,
          "port": 7878,
          "maxConnections": 2
        }
      }
    ],
    "Sources": [
      {
        "Source": "SampleAdapter.PCStatusMonitor",
        "Options": {
          "sampleRate": 1000
        }
      }
    ]
  }
}
