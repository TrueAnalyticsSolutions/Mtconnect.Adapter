{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Service": {
    "Imports": [
      "PCAdapter.dll",
      "Mtconnect.TcpAdapter.dll"
    ],
    "Adapters": [
      {
        "Adapter": "Mtconnect.TcpAdapter",
        "Sources": [ "SampleAdapter.PCStatusMonitor" ],
        "Options": {
          "heartbeat": 10000,
          "port": 7878,
          "maxConnections": 2
        }
      }
    ],
    "Sources": [
      {
        "Source": "SampleAdapter.PCStatusMonitor",
        "Options": {
          "sampleRate": 1000
        }
      }
    ]
  }
}
